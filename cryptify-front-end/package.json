{
  "name": "cryptify-front-end",
  "version": "0.1.0",
  "private": true,
  "main": "./public/electron.js",
  "homepage": "./",
  "author": "Rowan Goemans <rowan.goemans@bdtnl.com>",
  "build": {
    "appId": "cryptify",
    "files": [
      "dist/**/*",
      "./build/*"
    ],
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "category": "Security"
    },
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "category": "Utilities"
    }
  },
  "dependencies": {
    "@e4a/irmaseal-client": "0.0.4",
    "@mattiasbuelens/web-streams-adapter": "^0.1.0-alpha.5",
    "@privacybydesign/irma-client": "^0.3.3",
    "@privacybydesign/irma-core": "^0.3.3",
    "@privacybydesign/irma-web": "^0.3.3",
    "@transcend-io/conflux": "^3.2.0",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/streamsaver": "^2.0.0",
    "bigint-polyfill": "^0.1.0",
    "react": "^16.13.1",
    "react-circular-progressbar": "^2.0.3",
    "react-dom": "^16.13.1",
    "react-file-drop": "^3.1.2",
    "react-scripts": "3.4.1",
    "streamsaver": "^2.0.5",
    "typescript": "^3.9.6",
    "web-streams-polyfill": "^3.0.3"
  },
  "scripts": {
    "bridge-debug": "cd ../irmaseal-wasm-bindings && wasm-pack build --dev -d pkg/ --out-name index --scope e4a --target bundler && cd pkg && npm pack && cd ../../irmaseal-client && npm uninstall @e4a/irmaseal-wasm-bindings && npm install ../irmaseal-wasm-bindings/pkg && cd ../cryptify-front-end && npm install ../irmaseal-client",
    "bridge-release": "cd ../irmaseal-wasm-bindings && wasm-pack build --release -d pkg/ --out-name index --scope e4a --target bundler && cd pkg && npm pack && cd ../../irmaseal-client && npm uninstall @e4a/irmaseal-wasm-bindings && npm install ../irmaseal-wasm-bindings/pkg && cd ../cryptify-front-end &&  npm install ../irmaseal-client",
    "electron": "electron .",
    "start": "PORT=8080 react-app-rewired start",
    "build": "react-app-rewired build",
    "dist-electron": "electron-builder",
    "test": "react-app-rewired test",
    "eject": "react-app-rewired eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.12.39",
    "electron": "^8.2.5",
    "electron-builder": "^22.6.0",
    "electron-reload": "^1.5.0",
    "nodemon": "^2.0.3",
    "typescript": "^3.9.6",
    "react-app-rewired": "^2.1.8",
    "wasm-loader": "^1.3.0"
  }
}
